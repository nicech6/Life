<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TitleView">
        <attr name="title_left_size" format="dimension" />
        <attr name="title_center_size" format="dimension" />
        <attr name="title_right_size" format="dimension" />

        <attr name="title_left_color" format="color" />
        <attr name="title_center_color" format="color" />
        <attr name="title_right_color" format="color" />

        <attr name="title_left_str" format="string" />
        <attr name="title_center_str" format="string" />
        <attr name="title_right_str" format="string" />

        <attr name="title_left_drawable" format="reference" />
        <attr name="title_center_drawable" format="reference" />
        <attr name="title_right_drawable" format="reference" />

        <attr name="title_background_color" format="color" />

    </declare-styleable>

    <declare-styleable name="MineInfoView">
        <!-- 左边图片内容 -->
        <attr name="iv_left" format="reference" />
        <!--中间图片-->
        <attr name="iv_center" format="reference" />
        <!-- 左边文本内容 -->
        <attr name="tv_left" format="string" />
        <!-- 中间文本内容 -->
        <attr name="tv_center" format="string" />
        <!-- 右边图片内容 -->
        <attr name="iv_right" format="reference" />
        <!-- 左边文字颜色 -->
        <attr name="tv_color_left" format="color" />
        <!-- 中间文字颜色 -->
        <attr name="tv_color_center" format="color" />
        <!-- 左边文字大小 -->
        <attr name="tv_size_left" format="dimension" />
        <!-- 中间文字大小 -->
        <attr name="tv_size_center" format="dimension" />
        <!--右边文字大学校-->
        <attr name="tv_right_size" format="dimension" />
        <!--右边文字颜色-->
        <attr name="tv_right_color" format="color" />
        <!--右边文字内容-->
        <attr name="tv_right" format="string" />
        <!--center文字hint-->
        <attr name="tv_center_hint" format="string" />
        <!--是否隐藏右侧图标-->
        <attr name="iv_right_gone" format="boolean" />
        <!--中间文字左边距-->
        <attr name="tv_center_margin" format="dimension" />
    </declare-styleable>

    <declare-styleable name="LineView">
        <!--颜色-->
        <attr name="line_bg_color" format="color"></attr>
    </declare-styleable>

</resources>