<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginMvpActivity">

    <TextView
        android:id="@+id/_tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_26"
        android:layout_marginTop="@dimen/dimen_72"
        android:text="同学你好！\n使用验证码登录"
        android:textSize="@dimen/dimen_26"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/il_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_26"
        android:layout_marginTop="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_26"
        android:hint="请输入账号"
        android:textColor="@color/config_color_text_33"
        android:textColorHint="@color/config_color_text_99"
        android:textSize="@dimen/font_size_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/_tv_1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/il_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_26"
        android:layout_marginTop="20dp"
        android:layout_marginRight="@dimen/dimen_26"
        android:layout_marginBottom="20dp"
        android:hint="请输入密码"
        android:textColor="@color/config_color_text_33"
        android:textColorHint="@color/config_color_text_99"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/il_user">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.cuihai.base.widget.CommonRoundTextView
        android:id="@+id/btn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/dimen_26"
        android:layout_marginTop="@dimen/dimen_50"
        android:layout_marginRight="@dimen/dimen_26"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/config_color_white"
        android:textSize="@dimen/font_size_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/il_pwd"
        app:rtvBgColor="@color/config_color_bg_blue"
        app:rtvRadius="6dp" />


</androidx.constraintlayout.widget.ConstraintLayout>